<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tebakanbuah.MainActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:contentDescription="Logo untuk permainan tebak buah-buahan."
            android:src="@drawable/tebakbuah" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_apel"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/apel"
                android:background="@android:color/holo_orange_dark"
                android:contentDescription="Gambar buah apel untuk permainan."/>


            <ImageView
                android:id="@+id/imageView_alpukat"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/alpukat"
                android:background="@android:color/holo_red_dark"
                android:contentDescription="Gambar buah alpukat untuk permainan."/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_durian"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/durian"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:background="@android:color/holo_blue_dark"
                android:contentDescription="Gambar buah durian untuk permainan."/>

            <ImageView
                android:id="@+id/imageView_ceri"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ceri"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:background="@android:color/holo_green_dark"
                android:contentDescription="Gambar buah ceri untuk permainan."/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_manggis"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:contentDescription="Gambar buah manggis untuk permainan."
                android:src="@drawable/manggis" />

            <ImageView
                android:id="@+id/imageView_stawberry"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:contentDescription="Gambar buah stawberry untuk permainan."
                android:src="@drawable/strawberry" />

            <ImageView
                android:id="@+id/imageView_jambuair"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:contentDescription="Gambar buah jambuair untuk permainan."
                android:src="@drawable/jambuair" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
