<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/background_dark"
    tools:context="com.example.tebakanbuah.TebakActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_tebak"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:src="@drawable/alpukat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Buah ini namanaya apa?"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="318dp"
        android:layout_margin="5dp"
        android:gravity="bottom"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editText_jawab"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:padding="4dp" />

        <Button
            android:id="@+id/buttonCek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="3"
            android:background="@android:color/white"
            android:text="cek"
            android:textAllCaps="true"
            android:textColor="@android:color/system_on_surface_dark"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:text="Muhammad Sidiq(210401083)"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>